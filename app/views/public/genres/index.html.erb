<div class="container">
  <div class="row pt-4">
    <h4><strong>ジャンル一覧</strong></h4>
  </div>
  <div class="row pt-4">
    <table class="table col-4 border-bottom">
      <thead>
        <tr class="text-center bg-light">
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, items_path(genre_id: genre.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>