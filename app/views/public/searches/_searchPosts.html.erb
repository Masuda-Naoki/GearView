<h2>Posts search for "<%= word %>"</h2>
<table class="table">
  <thead>
    <tr>
      <th>道具名</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.item_name %></td>
        <td><%= post.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

