<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9 my-3">

  
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post do |f| %>
        <table class="table table-bordered text-center">
          <tr>
            <td>
              <h4>画像</h4>
              <%= f.file_field :image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <td>
              <h4>道具名</h4>
              <%= f.text_field :item_name, class: 'text-center' %>
            </td>
          </tr>
          <tr>
            <td>
              <h4>説明</h4>
              <%= f.text_area :description, class: 'text-center' %>
            </td>
          </tr>
          <td class="text-center"><%= render "public/posts/rate", post: @post %></td>
          <tr>
            <td><%= f.submit '          投稿          ', class: 'btn btn-primary btn-lg btn-hover-effect' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>



