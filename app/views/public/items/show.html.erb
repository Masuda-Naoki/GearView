<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row">
    <div class="col-md-6">
      <% if @item['mediumImageUrls'].present? %>
        <div class="item-image text-center">
          <%= image_tag @item['mediumImageUrls'][0], alt: '商品画像', class: 'img-fluid', width: '250', height: '250' %>
        </div>
      <% else %>
        <p class="no-image text-center">No image available</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1 class="item-name"><%= @item['itemName'] %></h1>
      <p class="item-price h2">価格: <%= @item['itemPrice'] %>円</p>
      <% if @item['reviewAverage'].present? %>
        <p class="item-review h2">評価: <%= @item['reviewAverage'] %> / 5 </p>
      <% else %>
        <p class="item-review h2">レビューはありません</p>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to '戻る', root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
