<div class="container">
  <% if @item['mediumImageUrls'].present? %>
    <div class="item-image">
      <%= image_tag @item['mediumImageUrls'][0], alt: '商品画像' %>
    </div>
  <% else %>
    <p class="no-image">No image available</p>
  <% end %>
  <h1 class="item-name"><%= @item['itemName'] %></h1>
  <p class="item-price">価格: <%= @item['itemPrice'] %>円</p>
<% if @item['reviewAverage'].present? %>
    <p class="item-review">評価: <%= @item['reviewAverage'] %> / 5 </p>
  <% else %>
    <p class="item-review">レビューはありません</p>
  <% end %>
</div>

