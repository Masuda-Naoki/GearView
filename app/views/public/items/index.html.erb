<div class="container">
  <div class="mt-4"> 
  <h1 class="page-title">キャンプ道具一覧</h1>

  <div class="mt-4"> <!-- フォームの上部のマージンを設定 -->
    <%= form_with url: items_path, method: :get, local: true, class: "search-form" do |f| %>
      <%= f.text_field :keyword, placeholder: 'キーワードを入力', class: "search-input" %>
      <%= f.submit '検索', class: "search-button" %>
    <% end %>
  </div>
  <div class="mt-4"> 
  <% if @items.present? %>
    <ul class="item-list">
      <% @items.each do |item| %>
        <li class="item d-flex align-items-center mb-4">
          <div class="item-image mr-3">
            <% if item['mediumImageUrls'].present? %>
              <%= image_tag(item['mediumImageUrls'][0], class: "item-image") %>
            <% else %>
              <p class="no-image">No image available</p>
            <% end %>
          </div>
          <div class="item-details">
            <%= link_to item_path(item['itemCode']) do %>
              <h3 class="item-name"><%= item['itemName'] %></h3>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="no-items">該当する道具はありません。</p>
  <% end %>
</div>
