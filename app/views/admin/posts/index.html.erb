<div class="container">
  <div class="row">
    <div class="col-1 my-3"></div>
    <div class="container">
      <h1 class="page-title">管理者用レビュー一覧</h1>
    </div>
  </div>
  <%= link_to '新着順', admin_posts_path(order: 'newest') %>
  <span class="divider">｜</span>
  <%= link_to '評価の高い順', admin_posts_path(order: 'popular') %>
</div>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <% if post.image.attached? %>
            <%= image_tag post.image, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">道具名：<%= post.item_name %></h5>
            <p class="card-text">説明：<%= post.description %></p>
            <div id="rate_<%= post.id %>"></div><!-- 評価を表示するための要素 -->
            <td><%= render "public/posts/rateindex", post: post %></td><br>
            <div class="d-flex justify-content-between">
              <%= link_to '投稿詳細', post_path(post), class: 'btn btn-primary' %>
              <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
